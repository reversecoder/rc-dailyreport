<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC">

    <LinearLayout
        android:id="@+id/newFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/abb_btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/add_button"/>

        <TextView
            android:id="@+id/createNewFormatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Format"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:textColor="#FF9966"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/writeReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newFormat"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/abb_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/edit_button"/>

        <TextView
            android:id="@+id/writeTodaysReportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Today's Report"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:textColor="#FF9966"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/todays_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/writeReport"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/writeReportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_centerInParent="true"
            android:text="Write Today's Report"
            android:textSize="30dp"
            android:textColor="#BD33A4"/>

        <LinearLayout
            android:id="@+id/savedFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_below="@+id/writeReportText"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/using_save_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit_button"/>

            <TextView
                android:id="@+id/usingSaveText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using Saved Format"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:textColor="#FF9966"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/usingNewFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_below="@+id/savedFormat"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/using_new_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/edit_button"/>

            <TextView
                android:id="@+id/UsingNewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using New Format"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:textColor="#FF9966"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>