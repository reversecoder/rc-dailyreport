<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.reversecoder.dailyreport.DailyReportMainActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/set_start_time"
        android:hint="Set time.."
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START TIME"
        android:id="@+id/btn_start_time"
        android:layout_alignBottom="@+id/set_start_time"
        android:layout_toRightOf="@+id/set_start_time"
        android:layout_toEndOf="@+id/set_start_time" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/set_end_time"
        android:hint="Set time.."
        android:layout_below="@+id/set_start_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="END TIME"
        android:id="@+id/btn_end_time"
        android:layout_below="@+id/btn_start_time"
        android:layout_alignLeft="@+id/btn_start_time"
        android:layout_alignStart="@+id/btn_start_time" />

    <Button
        android:text="Sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_end_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/btn_sync" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sync"
        android:layout_alignRight="@+id/btn_sync"
        android:layout_alignEnd="@+id/btn_sync"
        android:layout_marginTop="66dp"
        android:id="@+id/txt_splited_time" />

</RelativeLayout>
